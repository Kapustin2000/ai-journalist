generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum DocumentStatus {
  draft
  published
  archived
}

enum UpdateState {
  pending
  applied
  rejected
}

model Document {
  id         String            @id @default(uuid())
  projectId  String
  resourceId String
  title      String?
  status     DocumentStatus    @default(draft)
  content    Json
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  history    DocumentHistory[]
  updates    DocumentUpdate[]

  @@unique([projectId, resourceId])
}

model DocumentHistory {
  id         String   @id @default(uuid())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  note       String?
  content    Json
  createdAt  DateTime @default(now())
}

model DocumentUpdate {
  id         String      @id @default(uuid())
  document   Document    @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String
  type       String
  payload    Json
  state      UpdateState @default(pending)
  note       String?
  createdAt  DateTime    @default(now())
  resolvedAt DateTime?
}

enum AiOperationType {
  rewrite
  insert
  delete
  improve
  chat
}

enum AiOperationStatus {
  pending
  processing
  completed
  failed
  cancelled
}

model AiOperation {
  id           String            @id @default(uuid())
  documentId   String
  type         AiOperationType
  status       AiOperationStatus @default(pending)
  input        Json // Original request data
  output       Json? // AI response
  error        String?
  metadata     Json? // blockId, context, etc
  tokensUsed   Int?
  processingMs Int?
  createdAt    DateTime          @default(now())
  completedAt  DateTime?

  @@index([documentId])
  @@index([status])
  @@index([createdAt])
}

model AiChatMessage {
  id         String   @id @default(uuid())
  sessionId  String
  documentId String
  role       String // 'user' | 'assistant' | 'system'
  content    String   @db.Text
  metadata   Json? // selectedBlockId, updates, etc
  createdAt  DateTime @default(now())

  @@index([sessionId])
  @@index([documentId])
  @@index([createdAt])
}

model AiSession {
  id           String   @id @default(uuid())
  documentId   String
  userId       String?
  metadata     Json? // context, preferences, etc
  messageCount Int      @default(0)
  createdAt    DateTime @default(now())
  lastActiveAt DateTime @default(now())

  @@index([documentId])
  @@index([userId])
  @@index([lastActiveAt])
}
